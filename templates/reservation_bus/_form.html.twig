	<div class="form-floating mb-3">
		{{form_widget(form.numPlace,{'attr':{'class':'form-control'}})}}
		<div style="color: red; list-style: none;">
			{{ form_errors(form.numPlace,{'attr':{'class':'form-control'}}) }}
		</div>
	</div>

	{{form_label(form.date,'date : ',{'attr':{'class':'form-label'}})}}
