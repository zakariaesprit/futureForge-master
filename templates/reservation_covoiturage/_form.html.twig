		{{form_widget(form.date,{'attr':{'class':'form-control'}})}}
		<div style="color: red; list-style: none;">
			{{ form_errors(form.date,{'attr':{'class':'form-control'}}) }}
		</div>
	</div>
	{{form_label(form.distination,'Destination : ',{'attr':{'class':'form-label'}})}}
	<div class="form-floating mb-3">
		{{form_widget(form.distination,{'attr':{'class':'form-control'}})}}
