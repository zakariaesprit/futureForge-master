			{{ form_errors(form.description,{'attr':{'class':'form-control'}}) }}
		</div>
	</div>

	{{form_label(form.type,'Type : ',{'attr':{'class':'form-label'}})}}
	<div class="form-floating mb-3">
		{{form_widget(form.type,{'attr':{'class':'form-control'}})}}
		<div style="color: red; list-style: none;">
			{{ form_errors(form.type,{'attr':{'class':'form-control'}}) }}
		</div>
	</div>

	{{form_label(form.reduction,'Reduction : ',{'attr':{'class':'form-label'}})}}
	<div class="form-floating mb-3">
		{{form_widget(form.reduction,{'attr':{'class':'form-control'}})}}
		<div style="color: red; list-style: none;">
			{{ form_errors(form.reduction,{'attr':{'class':'form-control'}}) }}
		</div>
	</div>
	{{form_label(form.dated,'Date Debut : ',{'attr':{'class':'form-label'}})}}
	<div class="form-floating mb-3">
		{{form_widget(form.dated,{'attr':{'class':'form-control'}})}}
