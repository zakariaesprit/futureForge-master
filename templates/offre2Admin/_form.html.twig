		{{form_widget(form.datef,{'attr':{'class':'form-control'}})}}
		<div style="color: red;">
			{{ form_errors(form.datef,{'attr':{'class':'form-control'}}) }}
		</div>
	</div>
	<button class="btn">{{ button_label|default('Save') }}</button>
	{{ form_end(form) }}
</div>
