{% extends 'basebackUser.html.twig' %}

{% block title %}Abonnement{% endblock %}

{% block body %}
    <h1>Abonnement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ abonnement.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ abonnement.prenom }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
							<img style="height: 200px; width: 200px; object-fit: cover;" src="{{ asset('uploads/' ~ abonnement.image) }}"/></td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ abonnement.email }}</td>
            </tr>
            <tr>
                <th>Identifiant</th>
                <td>{{ abonnement.identifiant }}</td>
            </tr>
            <tr>
                <th>Cin</th>
                <td>{{ abonnement.cin }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ abonnement.type }}</td>
            </tr>
            <tr>
                <th>Dated</th>
                <td>{{ abonnement.dated ? abonnement.dated|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Datef</th>
                <td>{{ abonnement.datef ? abonnement.datef|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ abonnement.prix }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_abonnement_index') }}">back to list</a>
{% endblock %}
