<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Abonnement Print</title>
		<link href="{{ asset('admin/css/sb-admin-2.css') }}" rel="stylesheet"/>
		<link rel="stylesheet" href="{{ asset('front/css/style.css') }}"/>
	</head>
	<body>
		<header class="clearfix">
			<div id="logo">
				ThniTy
			</div>
			<h1 align="center">ThniTy - tous les Abonnements</h1>
			<hr></hr>
		<div class="table-wrapper">
			<h1>Abonnements</h1>

			<table class="table">
				<thead>
					<tr>
						<th>Nom</th>
						<th>Prenom</th>
						<th>Image</th>
						<th>Email</th>
						<th>Identifiant</th>
						<th>Cin</th>
						<th>Type</th>
						<th>Date Debut</th>
						<th>Date fin</th>
						<th>Prix</th>
					</tr>
				</thead>
				<tbody>
					{% for abonnement in abonnements %}
						<tr>
							<td>{{ abonnement.nom }}</td>
							<td>{{ abonnement.prenom }}</td>
							<td>
								<img style="height: 100px; width: 100px; object-fit: cover;" src="{{ asset('http://127.0.0.1:8000/uploads/' ~ abonnement.image) }}"/></td>
							<td>{{ abonnement.email }}</td>
							<td>{{ abonnement.identifiant }}</td>
							<td>{{ abonnement.cin }}</td>
							<td>{{ abonnement.type }}</td>
							<td>{{ abonnement.dated ? abonnement.dated|date('Y-m-d') : '' }}</td>
							<td>{{ abonnement.datef ? abonnement.datef|date('Y-m-d') : '' }}</td>
							<td>{{ abonnement.prix }}</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="6">no abonnements found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</body>
</html>
