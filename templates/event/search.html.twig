

{% extends 'base.html.twig' %}

{% block body %}
<link href="{{ asset('admin/img/favicon.ico') }}" rel="icon">
  <div class="container">
    <h1 class="text-center mt-4 mb-5">Recherche de events</h1>

    <div class="row justify-content-right">
      <div class="col-lg-8">
        {{ form_start(form, {'attr': {'class': 'form'}}) }}
          <div class="row">
            <div class="col-lg-4">
              <div class="form-group">
                {{ form_row(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'nom '}}) }}
              </div>
            </div>
            <div class="col-lg-4">
              <div class="form-group">
                {{ form_row(form.Categories_id, {'attr': {'class': 'form-control', 'placeholder': 'Categorie_id'}}) }}
              </div>
            </div>
            <div class="col-lg-4">
              <div class="form-group">
                {{ form_row(form.type, {'attr': {'class': 'form-control', 'placeholder': 'type '}}) }}
              </div>
            </div>
          </div>
          <div class="form-group text-center">
            {{ form_row(form.search, {'attr': {'class': 'btn btn-primary'}}) }}
          </div>
        {{ form_end(form) }}
      </div>
    </div>

    {% if Evenements is not empty %}
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <table class="table table-striped table-bordered mt-5">
            <thead>
              <tr>
                <th scope="col">nom</th>
                <th scope="col"> categorie</th>
                <th scope="col">type</th>
              </tr>
            </thead>
            <tbody>
              {% for ev in Evenements  %}
                <tr>
                  <td>{{ ev.getnom() }}</td>
                  <td>{{ ev.getCategoriesId().getNom()  }}</td>
                  <td>{{ ev.gettype() }}</td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    {% endif %}
  </div>

  <style>
    .container {
      max-width: 1200px;
      margin: 0 auto;
    }

    .form {
      
      background-color: #f2f2f2;
      border-radius: 10px;
      padding: 30px;
      box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
      margin: 0 auto;
      width:1000px;
     
    }

    .table {
      background-color: #fff;
      border-radius: 10px;
      box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
    }
  </style>
{% endblock %}

