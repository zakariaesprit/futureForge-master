{% extends 'base.html.twig' %}
{% block body %}
</br>
    <div style="display: flex;align-items:center;justify-content: center">
        <div class="row">
<div class="bg-light rounded h-400 p-4">
                
                    <h5 class=class="mb-4">Ajouter un event </h5>

            <!-- General Form Elements -->
            {{ form_start(e, { attr: { novalidate: 'novalidate' } }) }}
             <div class="form-group">
                <label for="inputText" class="col-sm-8col-form-label">Nom event</label>
                <div class="col-sm-50">
                    {{ form_widget(e.nom, {'attr':{'class':'form-control'}}) }}
                    <div style="color: red; list-style: none;">
                {{ form_errors(e.nom, {'attr': {'class': 'text-danger'}}) }}
                 </div>
                  </div>
                 <div class="form-group">
                <label for="inputText" class="col-sm-10 col-form-label">type</label>
                    {{ form_widget(e.type, {'attr': {'class': 'form-control'}}) }}
                    <div style="color: red; list-style: none;">
                {{ form_errors(e.type, {'attr': {'class': 'text-danger'}}) }}
                </div>
                </div>
                 <div class="form-group">
                <label for="inputText" class="col-sm-10 col-form-label">description</label>
                    {{ form_widget(e.description, {'attr': {'class': 'form-control', 'style': 'block-size: 150px;'}}) }}
                    <div style="color: red; list-style: none;">
                {{ form_errors(e.description, {'attr': {'class': 'text-danger'}}) }}
                </div>
                </div>
                 <div class="form-group">
                <label for="inputText" class="col-sm-8 col-form-label">categorie</label>
                    {{ form_widget(e.Categories_id, {'attr': {'class': 'form-control'}}) }}
                    <div style="color: red; list-style: none;">
                {{ form_errors(e.Categories_id, {'attr': {'class': 'text-danger'}}) }}
                </div>
                </div>
               <div class="form-group">
                    {{ form_widget(e.date, {'attr': {'class': 'form-control'}}) }}
                <div style="color: red; list-style: none;">
                {{ form_errors(e.date, {'attr': {'class': 'text-danger'}}) }}
                 </div>
                  </div>

                <br/>

                <div class="col-sm-50" style="display: flex;align-items: center;justify-content: center">

                    <button type="submit" class="btn btn-primary">Ajouter</button>
                </div>

            {{ form_end(e) }}
        </div>
            </div>

        </div>

    </div>
     </div>
